@model ST_Invoicing.Models.ST_Emp

@{
    ViewBag.Title = "南台灣-修改密碼";
}

<script>
    $(document).ready(function () {
        $("#ST_Emp").addClass("active");
    });
</script>

<h2>修改密碼</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.serno)
        @Html.HiddenFor(model => model.guid)
        @Html.HiddenFor(model => model.emp_name)
        @Html.HiddenFor(model => model.emp_gender)
        @Html.HiddenFor(model => model.emp_birthday)
        @Html.HiddenFor(model => model.emp_identity_num)
        @Html.HiddenFor(model => model.emp_tel)
        @Html.HiddenFor(model => model.emp_phone)
        @Html.HiddenFor(model => model.emp_address)
        @Html.HiddenFor(model => model.salary)


        @Html.HiddenFor(model => model.account)

        <div class="form-group">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.password2, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.password2, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.out_date)

        @Html.HiddenFor(model => model.remark)

        @Html.HiddenFor(model => model.deleted_at)


        @Html.HiddenFor(model => model.del_yn)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存編輯" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <input type="button" class="btn btn-info" value="返回員工列表" onclick="location.href='@Url.Action("Index", "ST_Emp")'" />
</div>


