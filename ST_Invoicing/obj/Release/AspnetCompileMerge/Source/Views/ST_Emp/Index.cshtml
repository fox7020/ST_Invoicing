@model IEnumerable<ST_Invoicing.Models.ST_Emp>

@{
    ViewBag.Title = "南台灣-員工列表";
}

<script>
    $(document).ready(function () {
        $("#ST_Emp").addClass("active");
    });
</script>

<h2>員工列表</h2>

<p>
    <input type="button" class="btn btn-primary" value="新增員工" onclick="location.href='@Url.Action("Create", "ST_Emp")'" />
</p>
<table class="table">
    <tr>     
        <th>
            @Html.DisplayNameFor(model => model.emp_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emp_gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emp_birthday)
        </th>    
        <th>
            @Html.DisplayNameFor(model => model.emp_tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emp_phone)
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.remark)
        </th>    
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>      
        <td>
            @Html.DisplayFor(modelItem => item.emp_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.emp_gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.emp_birthday)
        </td>     
        <td>
            @Html.DisplayFor(modelItem => item.emp_tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.emp_phone)
        </td>      
        <td>
            @Html.DisplayFor(modelItem => item.remark)
        </td>      
        <td>
            <input type="button" class="btn btn-warning" value="編輯" onclick="location.href='@Url.Action("Edit", "ST_Emp", new { id = item.serno })'" />
            <input type="button" class="btn btn-success" value="查看" onclick="location.href='@Url.Action("Details", "ST_Emp", new { id = item.serno })'" />
            <input type="button" class="btn btn-danger" value="刪除" onclick="location.href='@Url.Action("Delete", "ST_Emp", new { id = item.serno })'" />
        </td>
    </tr>
}

</table>
