@model IEnumerable<ST_Invoicing.Models.ST_Vendor>

@{
    ViewBag.Title = "南臺灣-廠商列表";
}

<script>
    $(document).ready(function () {
        $("#ST_Vendor").addClass("active");
    });
</script>

<h2>廠商列表</h2>

<p>
    <input type="button" class="btn btn-primary" value="新增廠商" onclick="location.href='@Url.Action("Create", "ST_Vendor")'" />
</p>
<table class="table">
    <tr>        
        <th>
            @Html.DisplayNameFor(model => model.vendor_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contact_person)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vendor_tel1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vendor_tel2)
        </th>   
        <th>
            @Html.DisplayNameFor(model => model.remark)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>    
        <td>
            @Html.DisplayFor(modelItem => item.vendor_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact_person)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vendor_tel1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vendor_tel2)
        </td>    
        <td>
            @Html.DisplayFor(modelItem => item.remark)
        </td>     
        <td>
            <input type="button" class="btn btn-warning" value="編輯" onclick="location.href='@Url.Action("Edit", "ST_Vendor", new { id = item.serno })'" />
            <input type="button" class="btn btn-success" value="查看" onclick="location.href='@Url.Action("Details", "ST_Vendor", new { id = item.serno })'" />
            <input type="button" class="btn btn-danger" value="刪除" onclick="location.href='@Url.Action("Delete", "ST_Vendor", new { id = item.serno })'" />
        </td>
    </tr>
}

</table>
